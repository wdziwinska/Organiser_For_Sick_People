WindowManager:
    MainWindow:
    SecondWindow:
    PlotWindow:
    ListWindow:
    PulseWindow:

<MainWindow>:
    name: 'main'

    Button:
        text: '        Ustaw \n przypomnienie'
        pos_hint: {'center_x': 0.2, 'center_y': 0.1}
        size_hint: .2, .1
        background_color: 0, 0, 1, 1
        size: "20dp", "10dp"
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "right"

    Button:
        text: 'Kalendarz'
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        size_hint: .2, .1
        size: "20dp", "10dp"
        pos: "300dp", "100dp"
        background_color: 0, 0, 1, 1
        on_release: app.root.current = "list"

    Button:
        text: 'Wykresy'
        pos_hint: {'center_x': 0.8, 'center_y': 0.1}
        size_hint: .2, .1
        size: "20dp", "10dp"
        pos: "500dp", "100dp"
        background_color: 0, 0, 1, 1
        on_release:
            app.root.current = "plot"
            #root.plot()

<SecondWindow>:
    name: "second"

    Label:
        text: "Ustaw tytuł \nprzypomnienia"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.9}
    TextInput:
        id: msgTitle
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    Label:
        text: "Wprowadź treść \nprzypomnienia"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.75}
    TextInput:
        id: msg
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    Button:
        text: "Zatwierdź"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: .2, .1
        on_release:
            root.pressButtonZatwierdz()

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint: .2, .1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"


<PlotWindow>
    name: "plot"

    Button:
        text: "   Wygeneruj \n wykres pulsu"
        pos_hint: {'center_x': 0.1, 'center_y': 0.05}
        size_hint: .2, .1
        on_release: root.pulsePlot()

    Button:
        text: "         Wygeneruj \n wykres temperatury"
        pos_hint: {'center_x': 0.3, 'center_y': 0.05}
        size_hint: .2, .1
        on_release: root.temperaturePlot()

    Button:
        text: "      Wygeneruj \n wykres saturacji"
        pos_hint: {'center_x': 0.5, 'center_y': 0.05}
        size_hint: .2, .1
        on_release: root.saturationPlot()

    BoxLayout:
        id: box
        size_hint_y: .9
        pos_hint: {"top":1}

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.9, 'center_y': 0.05}
        size_hint: .2, .1
        on_release:
            app.root.current = "main"

    Button:
        text: "Dodaj dane"
        pos_hint: {'center_x': 0.7, 'center_y': 0.05}
        size_hint: .2, .1
        on_release: app.root.current = "pulse"


<ListWindow>:
    name: "list"

    MDList:
        TwoLineListItem:
            id: item1
            text: "Awesome List item 1"
            on_release: app.presser(self, "item1")

        TwoLineListItem:
            id: item2
            text: "Awesome List item 2"
            on_release: app.presser(self, "item2")
    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        size_hint: .2, .1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<PulseWindow>:
    name: "pulse"

    Label:
        text: "Wprowadź puls"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.4, 'center_y': 0.85}

    TextInput:
        id: pulseValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.4, 'center_y': 0.75}

    Label:
        text: "Wprowadź temperaturę"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.6, 'center_y': 0.85}

    TextInput:
        id: temperatureValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.6, 'center_y': 0.75}

    Label:
        text: "Wprowadź saturację"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.8, 'center_y': 0.85}

    TextInput:
        id: saturationValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.8, 'center_y': 0.75}

    Button:
        text: "Zatwierdź"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: .2, .1
        on_release:
            root.addNewPulseValue()
            root.addNewTemperatureValue()
            root.addNewSaturationValue()
            app.root.current = "plot"

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: .2, .1
        on_release:
            app.root.current = "plot"