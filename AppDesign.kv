WindowManager:
    MainWindow:
    AddMessageWindow:
    PlotWindow:
    ListWindow:
    AddDataWindow:

<MainWindow>:
    name: 'main'

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'

    Button:
        text: '        Ustaw \n przypomnienie'
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        size_hint: .2, .1
        #background_color: 0, 0, 0, 0
        background_color: 0, 0, 1, 1
        size: "20dp", "10dp"
       #   on_cursor_move: color: 0, 0, 1, 1
       # on_press: text_color: 0,0,1,1
        on_release:
            app.root.current = "second"
            root.manager.transition.direction = "right"


    Button:
        text: 'Kalendarz'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: .2, .1
        size: "20dp", "10dp"
        pos: "300dp", "100dp"
        background_color: 0, 0, 1, 1
        on_release:
            app.root.current = "list"
        on_press:
            root.generateListOfMessage()

    Button:
        text: 'Wykresy'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint: .2, .1
        size: "20dp", "10dp"
        pos: "500dp", "100dp"
        background_color: 0, 0, 1, 1
        on_release:
            app.root.current = "plot"
            #root.plot()

<AddMessageWindow>:
    name: "second"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'

    Label:
        text: "Ustaw tytuł \nprzypomnienia"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.9}
    TextInput:
        id: msgTitle
        multiline: False
        size_hint: .2, .1
        background_color: 1, 1, 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    Label:
        text: "Wprowadź treść \nprzypomnienia"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.75}
    TextInput:
        id: msg
        multiline: False
        size_hint: .2, .1
        background_color: 1, 1, 1, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    Button:
        text: "Zatwierdź"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: .2, .1
        background_color: 0, 0, 1, 1
        on_release:
            root.pressButtonZatwierdz()

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint: .2, .1
        background_color: 0, 0, 1, 1
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"


<PlotWindow>
    name: "plot"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'

    Button:
        text: "   Wygeneruj \n wykres pulsu"
        pos_hint: {'center_x': 0.1, 'center_y': 0.05}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release: root.pulsePlot()

    Button:
        text: "         Wygeneruj \n wykres temperatury"
        pos_hint: {'center_x': 0.3, 'center_y': 0.05}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release: root.temperaturePlot()

    Button:
        text: "      Wygeneruj \n wykres saturacji"
        pos_hint: {'center_x': 0.5, 'center_y': 0.05}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release: root.saturationPlot()

    BoxLayout:
        id: box
        size_hint_y: .9
        pos_hint: {"top":1}

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.9, 'center_y': 0.05}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release:
            app.root.current = "main"

    Button:
        text: "Dodaj dane"
        pos_hint: {'center_x': 0.7, 'center_y': 0.05}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release: app.root.current = "pulse"


<ListWindow>:
    name: "list"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'

    Button:
        text: "generuj"
        pos_hint: {'center_x': 0.9, 'center_y': 0.8}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release: root.messageForList()

    MDList:
        id: item

    Button:
        text: "wróć"
        pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        size_hint: .2, .1
        background_color: 0, 0, 0, 0
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

<AddDataWindow>:
    name: "pulse"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'

    Label:
        text: "Wprowadź puls"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.85}

    TextInput:
        id: pulseValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.3, 'center_y': 0.75}

    Label:
        text: "Wprowadź temperaturę"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}

    TextInput:
        id: temperatureValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    Label:
        text: "Wprowadź saturację"
        size_hint: .2, .1
        pos_hint: {'center_x': 0.7, 'center_y': 0.85}

    TextInput:
        id: saturationValue
        multiline: False
        size_hint: .2, .1
        pos_hint: {'center_x': 0.7, 'center_y': 0.75}

    Button:
        text: "Zatwierdź"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        size_hint: .2, .1
        background_color: 0, 0, 1, 1
        on_release:
            root.addNewPulseValue()
            root.addNewTemperatureValue()
            root.addNewSaturationValue()
            app.root.current = "plot"

    Button:
        text: "Wróć"
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: .2, .1
        background_color: 0, 0, 1, 1
        on_release:
            app.root.current = "plot"